@model rpaapp.Models.LayoutConfig

@{
    ViewData["Title"] = "Layout configuration";
}

<div>
    <form asp-controller="Layout" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="isVisible" type="radio" id="visible" value="true">
        <label asp-for="isVisible">Visible</label>
        <input asp-for="isVisible" type="radio" id="hidden" value="false">
        <label asp-for="isVisible">Hidden</label>
        <div class="form-group" style="padding-top: 20px;">
            <input type="text" asp-for="pngname" value="@Model.pngname" />
        </div>
        <div class="form-group" style="padding-top: 20px;">
            <input type="text" asp-for="Color" value="@Model.Color" />
        </div>
        <div class="form-group" style="padding-top: 20px;">
            <input type="submit" value="Save" class="btn btn-primary" style="background-color: #034791;" />
        </div> 
    </form>
</div>