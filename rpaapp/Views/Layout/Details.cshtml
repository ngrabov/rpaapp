@model rpaapp.Models.LayoutConfig

@{
    ViewData["Title"] = "Layout configuration";
}

<div>
    <form asp-controller="Layout" asp-action="Edit" enctype="multipart/form-data">
        <div>
            <p>Fieldset:</p>
        </div>
        <input asp-for="isVisible" type="radio" id="visible" value="true">
        <label asp-for="isVisible">Bartog</label>
        <input asp-for="isVisible" type="radio" id="hidden" value="false">
        <label asp-for="isVisible">TokiÄ‡</label>

        <div class="form-group" style="padding-top: 20px; display: flex; flex-direction: column;">
            <label>Logo image name (with extension): </label>
            <input type="text" asp-for="pngname" style="width: 100px;" value="@Model.pngname" />
        </div>
        <div class="form-group" style="padding-top: 20px; display: flex; flex-direction: column;">
            <label>Coloring: </label>
            <input type="text" asp-for="Color" style="width: 100px;" value="@Model.Color" />
        </div>
        <div class="form-group" style="padding-top: 20px;">
            <input type="submit" value="Save" class="btn btn-primary" style="background-color: #034791;" />
        </div> 
    </form>
</div>