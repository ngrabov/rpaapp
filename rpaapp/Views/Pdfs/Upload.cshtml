@model Pdf

@{
    ViewData["Title"] = "Upload pdf";
}

<div style="padding: 0 15px 0 15px;">
    <h1>PDF uploader</h1>
    <hr class="col-md-4" />
    <div class="row" style="display: flex; flex-direction: row;"> 
        <div class="col-md-12">
            <form asp-controller="Pdfs" asp-action="Upload" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="padding-top: 20px;">
                    <div style="width: 100%; border: 3px dotted grey; border-radius: 10px; background-color: lightblue; text-align: center;">
                        <input type="file" style="width: 99%; height: 200px; padding: 25px; margin: auto;" name="files" id="userInput" accept="application/pdf" multiple>
                        <p style="width: 90%; margin: auto;">... or simply drag and drop!</p>
                    </div>
                </div>
                <div class="form-group" style="padding-top: 20px;">
                    <input type="submit" value="Upload" id="sendButton" class="btn btn-primary" style="width: 80px; background-color: #034791;" >
                </div>
            </form>
        </div>
    </div>
</div>

<div style="padding-top: 20px;">*Number of pdfs limited to 20*</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
