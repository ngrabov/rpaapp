@model IEnumerable<rpaapp.Models.ProcessType>

@{
    ViewData["Title"] = "Processes index";
}

<h3>Processes TokiÄ‡ - index</h3>

<div>
    <a asp-action="Create">Create new</a>
</div>
<div>
    <table class="table table-hover">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Process Type ID (PTID)</th>
            <th>Action</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.ptid</td>
                    <td><a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>