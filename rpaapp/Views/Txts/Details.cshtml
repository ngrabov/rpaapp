                @if(vis == "true")
                {
                    <div class="form-group col-md-8">
                    <b><label asp-for="PersonInChargeId" class="control-label">Prvi potvrditelj</label></b>
                    @if(Model.isReviewed && !Model.isDownloaded)
                    {
                        <select asp-for="PersonInChargeId" style="padding: 0px 10px;" class="form-control" asp-items="@ViewBag.people" disabled required>
                            <option value="">--Select person--</option>
                        </select>
