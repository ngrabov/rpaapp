@model rpaapp.Models.Txt

@{
    ViewData["Title"] = "Invoice details";
    var temp = Model.DocumentId;
}

<div style="padding: 0 15px 0 15px;">
    <h3>Review data</h3>

    <hr />
    <div class="row" style="display: flex; flex-direction: row;">
        <div class="col-md-4">
            <form asp-action="Resolve" asp-route-id="@Model.Id" id="frm" name="frm" enctype="multipart/form-data"> 
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-8">
                    <b><label asp-for="Name"></label></b>
                    <input asp-for="Name" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="Group" class="control-label"></label></b>
                    <input asp-for="Group" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="Group" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="State" class="control-label"></label></b>
                    <input asp-for="State" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="VAT" class="control-label"></label></b>
                    <input asp-for="VAT" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="VAT" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="Currency" class="control-label"></label></b>
                    <input asp-for="Currency" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="BillingGroup" class="control-label"></label></b>
                    <input asp-for="BillingGroup" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="BillingGroup" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="IBAN" class="control-label"></label></b>
                    <input asp-for="IBAN" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="IBAN" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="VATobligation" class="control-label"></label></b>
                    <input asp-for="VATobligation" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="VATobligation" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <b><label asp-for="InvoiceNumber1" class="control-label"></label></b>
                    <input asp-for="InvoiceNumber1" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="InvoiceNumber1" class="text-danger"></span>
                </div>
                @if(Model.InvoiceNumber1 != Model.InvoiceNumber2)
                {
                    <div class="form-group col-md-8">
                        <b><label asp-for="InvoiceNumber2" class="control-label"></label></b>
                        <input asp-for="InvoiceNumber2" class="form-control" style="height: 25px;" required/>
                        <span asp-validation-for="InvoiceNumber2" class="text-danger"></span>
                    </div>
                }
                <div class="form-group col-md-8">
                    <b><label asp-for="InvoiceDate1" class="control-label"></label></b>
                    <input asp-for="InvoiceDate1" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="InvoiceDate1" class="text-danger"></span>
                </div>
                @if(Model.InvoiceDate1 != Model.InvoiceDate2)
                {
                    <div class="form-group col-md-8">
                        <b><label asp-for="InvoiceDate2" class="control-label"></label></b>
                        <input asp-for="InvoiceDate2" class="form-control" style="height: 25px;" required/>
                        <span asp-validation-for="InvoiceDate2" class="text-danger"></span>
                    </div>
                }
                <div class="form-group col-md-8">
                    <b><label asp-for="InvoiceDueDate1" class="control-label"></label></b>
                    <input asp-for="InvoiceDueDate1" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="InvoiceDueDate1" class="text-danger"></span>
                </div>
                @if(Model.InvoiceDueDate1 != Model.InvoiceDueDate2)
                {
                    <div class="form-group col-md-8">
                        <b><label asp-for="InvoiceDueDate2" class="control-label"></label></b>
                        <input asp-for="InvoiceDueDate2" class="form-control" style="height: 25px;" required/>
                        <span asp-validation-for="InvoiceDueDate2" class="text-danger"></span>
                    </div>
                }
                <div class="form-group col-md-8">
                    <b><label asp-for="Bruto1" class="control-label"></label></b>
                    <input asp-for="Bruto1" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="Bruto1" class="text-danger"></span>
                </div>
                @if(Model.Bruto1 != Model.Bruto2)
                {
                    <div class="form-group col-md-8">
                        <b><label asp-for="Bruto2" class="control-label"></label></b>
                        <input asp-for="Bruto2" class="form-control" style="height: 25px;" required/>
                        <span asp-validation-for="Bruto2" class="text-danger"></span>
                    </div>
                }
                <div class="form-group col-md-8">
                    <b><label asp-for="Neto1" class="control-label"></label></b>
                    <input asp-for="Neto1" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="Neto1" class="text-danger"></span>
                </div>
                @if(Model.Neto1 != Model.Neto2)
                {
                    <div class="form-group col-md-8">
                        <b><label asp-for="Neto2" class="control-label"></label></b>
                        <input asp-for="Neto2" class="form-control" style="height: 25px;" required/>
                        <span asp-validation-for="Neto2" class="text-danger"></span>
                    </div>
                }
                <div class="form-group col-md-8">
                    <b><label asp-for="ReferenceNumber1" class="control-label"></label></b>
                    <input asp-for="ReferenceNumber1" class="form-control" style="height: 25px;" required/>
                    <span asp-validation-for="ReferenceNumber1" class="text-danger"></span>
                </div>
                @if(Model.ReferenceNumber1 != Model.ReferenceNumber2)
                {
                    <div class="form-group col-md-8">
                        <b><label asp-for="ReferenceNumber2" class="control-label"></label></b>
                        <input asp-for="ReferenceNumber2" class="form-control" style="height: 25px;" required/>
                        <span asp-validation-for="ReferenceNumber2" class="text-danger"></span>
                    </div>
                }
                <div class="form-group" style="padding-top: 20px;">
                    <input type="submit" value="OK" class="btn btn-primary" />
                    <a asp-controller="Home" asp-action="Details" class="btn btn-primary" style="padding-left: 10px;" asp-route-id="@Model.DocumentId">Back</a>
                </div>   
            </form>
        </div>
        <div class="col-md-8">
            <div class="row">
                @{int c = 1;}
                @foreach (var item in Model.pngNames.Split('|'))
                {
                    <img id="myImg" class="mimg" style="width: 50%; height: auto;" src="~/Document/@temp/@item">

                    <div id="myModal" class="modal">
                        <span class="close">&times;</span>
                        <img class="modal-content" id="img01">
                        <div id="caption"></div>
                    </div>
                    c++;
                }
            </div>
        </div>
    </div>
</div>

<script>

var modal = document.getElementById("myModal");
var i;
var imgs = document.getElementsByClassName("mimg");
var modalImg = document.getElementById("img01");
for(i = 0; i < imgs.length; i++)
{
    imgs[i].onclick = function()
    {
        modal.style.display = "block";
        modalImg.src = this.src;
    } 
}

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on <span> (x), close the modal
span.onclick = function() { 
  modal.style.display = "none";
}
</script>

<style>
.mimg {
  border-radius: 5px;
  cursor: pointer;
  transition: 0.3s;
}

.mimg:hover {opacity: 0.7;}

/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.9); /* Black w/ opacity */
}

/* Modal Content (image) */
.modal-content {
  margin: auto;
  display: block;
  width: 80%;
  max-width: 1300px;
}

/* Add Animation */
.modal-content, #caption {  
  -webkit-animation-name: zoom;
  -webkit-animation-duration: 0.6s;
  animation-name: zoom;
  animation-duration: 0.6s;
}

@@-webkit-keyframes zoom {
  from {-webkit-transform:scale(0)} 
  to {-webkit-transform:scale(1)}
}

@@keyframes zoom {
  from {transform:scale(0)} 
  to {transform:scale(1)}
}

/* The Close Button */
.close {
  position: absolute;
  top: 15px;
  right: 35px;
  color: #f1f1f1;
  font-size: 40px;
  font-weight: bold;
  transition: 0.3s;
}

.close:hover,
.close:focus {
  color: #bbb;
  text-decoration: none;
  cursor: pointer;
}

/* 100% Image Width on Smaller Screens */
@@media only screen and (max-width: 700px){
  .modal-content {
    width: 100%;
  }
}
</style>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
