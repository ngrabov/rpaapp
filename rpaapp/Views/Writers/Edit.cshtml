@model rpaapp.Models.Writer

@{
    ViewData["Title"] = "Edit " + Model.FullName;
}

<h3>Edit</h3>

<hr />


<div class="col-md-4">
    <form asp-controller="Writers" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group" style="padding-top: 20px;">
            <label asp-for="FirstName" class="control-label"></label>
            <input type="text" class="form-control" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group" style="padding-top: 20px;">
            <label class="control-label" asp-for="LastName"></label>
            <input class="form-control" type="text" asp-for="LastName"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group" style="padding-top: 20px;">
            <input type="submit" value="Save" class="btn btn-primary" style="background-color: #034791;" />
        </div> 
    </form>
</div>